M98 P"0:/macros/Config Scripts/Tool Setups/Enable Heater 1"
M98 P"0:/macros/Config Scripts/Tool Setups/Enable Heater 2"

;real center 108, 99.6
;tool center 104, 89.5
;nozzel to nozzel 18mm


M563 P0 S"Dual - Right" D0 H1 F0	; define tool 0
G10 P0 X13 Y10 Z0				; set tool 0 axis offsets
G10 P0 R0 S0				; set initial tool 0 active and standby temperatures to 0C
M568 P0 S0				; enable mixing for tool 0

M563 P1 S"Dual - Left" D1 H2 F0 	; define tool 1
G10 P1 X-5 Y10 Z0			; set tool 1 axis offsets
G10 P1 R0 S0				; set initial tool 1 active and standby temperatures to 0C
M568 P1 S0				; enable mixing for tool 1

;Tuning result for heater 1 (right)
M307 H1 A721.8 C208.3 D6.5 S1.0 V24.0 B0
M307 H2 A709.1 C215.2 D6.0 S1.0 V24.0 B0

;set relays
M18 E ; Turn off Steppers for extruders
G4 P100
M42 P0 S0 ; Ensure relay 0 is off
M42 P1 S0 ; Ensure relay 1 is off
M42 P2 S0 ; Ensure relay 2 is off
G4 P100

echo "Configured for Dual 1.75 Bowden Hotend"